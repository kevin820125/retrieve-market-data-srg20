{
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["ESNext"],
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
  }
}
